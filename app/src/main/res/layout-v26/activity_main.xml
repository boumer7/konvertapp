<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:background="@color/JustWhite"
    android:windowSoftInputMode="stateHidden|adjustPan"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/reverseButton"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:background="@drawable/button_selector"
        android:contentDescription="@string/ReverseTransliteration"
        app:layout_constraintBottom_toBottomOf="@+id/TranslateButton"
        app:layout_constraintEnd_toStartOf="@+id/TranslateButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Output"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@mipmap/arrows96x96" />

    <ImageButton
        android:id="@+id/cameraicon"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/button_selector"
        android:contentDescription="@string/cameraicon"
        app:layout_constraintBottom_toBottomOf="@+id/TranslateButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/TranslateButton"
        app:layout_constraintTop_toBottomOf="@+id/Output"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@mipmap/cameraicon64x64" />

    <ImageButton
        android:id="@+id/clearButton"
        android:layout_width="161dp"
        android:layout_height="68dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_selector"
        android:contentDescription="@string/clearButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/changetoUppercase"
        app:layout_constraintTop_toBottomOf="@+id/cameraicon"
        app:srcCompat="@mipmap/trashicon64x64" />

    <Button
        android:id="@+id/copyToClipboard"
        android:layout_width="161dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_selector"
        android:fadingEdge="horizontal"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/copy"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/settingsGear"
        app:layout_constraintEnd_toEndOf="@+id/changetoUppercase"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/changetoUppercase"
        app:layout_constraintTop_toBottomOf="@+id/changetoUppercase"
        app:layout_constraintVertical_bias="0.0" />

    <Switch
        android:id="@+id/changetoUppercase"
        android:layout_width="161dp"
        android:layout_height="68dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_selector"
        android:fadingEdge="horizontal"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/changetouppercase"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:theme="@style/SCBSwitch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reverseButton" />

    <Button
        android:id="@+id/restoreText"
        android:layout_width="161dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_selector"
        android:fadingEdge="horizontal"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/restoreText"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/settingsGear"
        app:layout_constraintEnd_toEndOf="@+id/clearButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/clearButton"
        app:layout_constraintTop_toBottomOf="@+id/clearButton"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/LineBottom"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:background="@drawable/buttonsharp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restoreText"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="0dp"
        android:background="@drawable/buttonsharp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/konvert"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="56sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Output"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_marginTop="20dp"

        android:autofillHints=""
        android:background="@drawable/border_textview"
        android:clickable="true"
        android:ems="10"

        android:focusable="true"
        android:fontFamily="@font/montserrat_bold"

        android:hint="@string/LatinResult"

        android:maxLength="9999"
        android:padding="40dp"
        android:paddingLeft="30dp"
        android:paddingTop="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="30dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/selector_color"
        android:textColorHighlight="@color/DarkerBlue"
        android:textColorHint="@android:color/tertiary_text_light"
        android:textColorLink="@color/VeryDarkBlue"
        android:textCursorDrawable="@drawable/cursor_color"
        android:textIsSelectable="false"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Input" />

    <EditText
        android:id="@+id/Input"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:autofillHints=""

        android:background="@drawable/border_textview"
        android:clickable="true"
        android:ems="10"
        android:focusable="true"

        android:fontFamily="@font/montserrat_bold"
        android:hint="@string/CyrillicInput"

        android:inputType="textMultiLine"

        android:maxLength="9999"
        android:paddingLeft="30dp"
        android:paddingTop="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="30dp"
        android:scrollbars="vertical"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/selector_color"
        android:textColorHighlight="@color/DarkerBlue"
        android:textColorHint="@android:color/tertiary_text_light"
        android:textColorLink="@color/VeryDarkBlue"
        android:textCursorDrawable="@drawable/cursor_color"
        android:textIsSelectable="false"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/TranslateButton"
        android:layout_width="218dp"
        android:layout_height="68dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_selector"
        android:fadingEdge="horizontal"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/TranslateButton"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Output" />

    <ImageView
        android:id="@+id/InputFullscreen"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/InputFullscreen"
        app:layout_constraintBottom_toBottomOf="@+id/Input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Input"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/fs24x24_bold_grey" />

    <ImageButton
        android:id="@+id/settingsGear"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginTop="156dp"
        android:background="@drawable/button_selector"
        android:contentDescription="@string/settings"
        android:src="@mipmap/gearicon64x64"
        app:layout_constraintEnd_toStartOf="@+id/clearButton"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toEndOf="@+id/changetoUppercase"
        app:layout_constraintTop_toBottomOf="@+id/TranslateButton" />

    <ImageView
        android:id="@+id/OutputFullScreen"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/InputFullscreen"
        app:layout_constraintBottom_toBottomOf="@+id/Output"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Output"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/fs24x24_bold_grey" />

</androidx.constraintlayout.widget.ConstraintLayout>