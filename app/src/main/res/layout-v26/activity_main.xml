<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#070707"
    tools:context=".MainActivity">

    <View
        android:id="@+id/LineTop"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:background="#D84915"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.029"
        tools:layout_editor_absoluteX="0dp" />

    <View
        android:id="@+id/LineBottom"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:background="#D84915"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/konvert"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="64sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.039" />

    <Button
        android:id="@+id/TranslateButton"
        android:layout_width="191dp"
        android:layout_height="81dp"
        android:layout_marginTop="24dp"
        android:background="#D84915"
        android:fadingEdge="horizontal"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/TranslateButton"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Input" />

    <Switch
        android:id="@+id/changetoUppercase"
        android:layout_width="133dp"
        android:layout_height="68dp"
        android:layout_marginTop="284dp"
        android:background="#D84915"
        android:fadingEdge="horizontal"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/changetouppercase"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Input" />

    <Button
        android:id="@+id/restoreText"
        android:layout_width="133dp"
        android:layout_height="38dp"
        android:background="#D84915"
        android:fadingEdge="horizontal"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/restoreText"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changetoUppercase" />

    <Button
        android:id="@+id/copyToClipboard"
        android:layout_width="133dp"
        android:layout_height="38dp"
        android:layout_marginTop="556dp"
        android:background="#D84915"
        android:fadingEdge="horizontal"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/copy"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/changetoUppercase"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/Input"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_marginTop="24dp"
        android:autofillHints=""
        android:background="#FFF"
        android:ems="10"
        android:fontFamily="@font/montserrat_bold"
        android:hint="@string/CyrillicInput"
        android:inputType="textMultiLine"
        android:maxLength="999"
        android:scrollbars="vertical"
        android:text=""
        android:textAlignment="center"
        android:textColorHighlight="#D84915"
        android:textColorLink="#AF370F"
        android:textCursorDrawable="@drawable/cursor_color"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LineTop" />

    <EditText
        android:id="@+id/Output"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_marginTop="20dp"
        android:autofillHints=""
        android:background="#FFF"
        android:ems="10"
        android:fontFamily="@font/montserrat_bold"
        android:hint="@string/LatinResult"
        android:inputType="textMultiLine"
        android:maxLength="999"
        android:text=""
        android:textAlignment="center"
        android:textColorHighlight="#D84915"
        android:textColorLink="#AF370F"
        android:textCursorDrawable="@drawable/cursor_color"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TranslateButton" />

    <ImageView
        android:id="@+id/settingsGear"
        android:layout_width="89dp"
        android:layout_height="84dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Output"
        app:srcCompat="@drawable/gear128x128" />

    <ImageView
        android:id="@+id/cameraicon"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/cameraicon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Output"
        app:srcCompat="@drawable/cameraicon128x128" />

</androidx.constraintlayout.widget.ConstraintLayout>